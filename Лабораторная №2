# Вариант 24: Написать программу, решающую задачу из 1 лабораторной работы (в соответствии со своим вариантом) исполюзая регулярные выражения.
import re
number_dict = {0: 'ноль',
          1: 'один',
          2: 'два',
          3: 'три',
          4: 'четыре',
          5: 'пять',
          6: 'шесть',
          7: 'семь',
          8: 'восемь',
          9: 'девять'}
f = open('laba.txt')
File = (f.read())
Chisla = (re.findall('\d+', File))
Cifri = []
Chisla = [int(i) for i in Chisla]
if len(Chisla) == 0:
    print('Чисел в данном файле нет!')
else:
    print('Список чисел без значащих нулей:')
    print(Chisla)

    for i in range(len(Chisla)):
        number = str(Chisla[i])
        for j in range(len(number)):
            if int(number[j]) not in Cifri:
                Cifri.append(int(number[j]))

    print("Список используемых цифр: ")
    for i in Cifri:
        print(number_dict[i], end=" ")
